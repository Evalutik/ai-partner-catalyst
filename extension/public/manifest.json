{
  "manifest_version": 3,
  "name": "Aeyes",
  "version": "0.1.0",
  "description": "Voice-controlled browser for visually impaired users",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+V"
      },
      "description": "Activate voice assistant"
    }
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}